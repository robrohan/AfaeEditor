<MODE>

    <PROPS>
        <PROPERTY NAME="lineComment" VALUE=";" />
    </PROPS>

    <RULES HIGHLIGHT_DIGITS="TRUE">
        <!-- <WHITESPACE> </WHITESPACE>
        <WHITESPACE>	</WHITESPACE> -->

        <EOL_SPAN TYPE="COMMENT1">;</EOL_SPAN>

        <SPAN TYPE="LITERAL1" NO_LINE_BREAK="TRUE">
            <BEGIN>'</BEGIN>
            <END>'</END>
        </SPAN>

        <SPAN TYPE="LITERAL1" NO_LINE_BREAK="TRUE">
            <BEGIN>"</BEGIN>
            <END>"</END>
        </SPAN>

        <!-- <MARK_PREVIOUS TYPE="LABEL" EXCLUDE_MATCH="FALSE"
            AT_LINE_START="FALSE">:</MARK_PREVIOUS>

        <MARK_FOLLOWING TYPE="DIGIT" EXCLUDE_MATCH="FALSE"
            AT_LINE_START="FALSE">$</MARK_FOLLOWING>

        <MARK_FOLLOWING TYPE="DIGIT" EXCLUDE_MATCH="FALSE"
            AT_LINE_START="FALSE">%</MARK_FOLLOWING> -->

        <SEQ TYPE="LITERAL2">.B</SEQ>
        <SEQ TYPE="LITERAL2">.W</SEQ>
        <SEQ TYPE="LITERAL2">.L</SEQ>
        <SEQ TYPE="KEYWORD1">\</SEQ>
        <SEQ TYPE="KEYWORD1">@</SEQ>

        <SEQ TYPE="NULL">.</SEQ>
        <SEQ TYPE="NULL">,</SEQ>
        <SEQ TYPE="LABEL">:</SEQ>
        <SEQ TYPE="NULL">(</SEQ>
        <SEQ TYPE="NULL">)</SEQ>
        <SEQ TYPE="NULL">]</SEQ>
        <SEQ TYPE="NULL">[</SEQ>
        <SEQ TYPE="NULL">$</SEQ>

        <SEQ TYPE="OPERATOR">+</SEQ>
        <SEQ TYPE="OPERATOR">-</SEQ>
        <SEQ TYPE="OPERATOR">/</SEQ>
        <SEQ TYPE="OPERATOR">*</SEQ>
        <SEQ TYPE="OPERATOR">%</SEQ>

        <SEQ TYPE="OPERATOR">|</SEQ>
        <SEQ TYPE="OPERATOR">^</SEQ>
        <SEQ TYPE="OPERATOR">&amp;</SEQ>
        <SEQ TYPE="OPERATOR">~</SEQ>
        <SEQ TYPE="OPERATOR">!</SEQ>

        <!--SEQ TYPE="OPERATOR">=</SEQ-->
        <SEQ TYPE="OPERATOR">&lt;</SEQ>
        <SEQ TYPE="OPERATOR">&gt;</SEQ>

