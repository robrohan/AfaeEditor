<?xml version="1.0"?>
<!DOCTYPE MODE SYSTEM "xmode.dtd">
<MODE>
	<PROPS>
		<PROPERTY NAME="lineComment" VALUE="x" />
		<PROPERTY NAME="commentStart" VALUE="x" />
		<PROPERTY NAME="commentEnd" VALUE=" " />
	</PROPS>
	
	<RULES IGNORE_CASE="TRUE">
		<!-- Comments -->
		<EOL_SPAN TYPE="NULL" DELEGATE="NOTELINE" AT_LINE_START="TRUE">-</EOL_SPAN>
		<EOL_SPAN TYPE="LITERAL2" DELEGATE="NOTELINE" AT_LINE_START="TRUE">*</EOL_SPAN>
		<EOL_SPAN TYPE="COMMENT1" AT_LINE_START="TRUE" IGNORE_CASE="TRUE">x</EOL_SPAN>
		
		<EOL_SPAN TYPE="DIGIT" AT_LINE_START="TRUE">!</EOL_SPAN>
		<EOL_SPAN TYPE="LABEL" AT_LINE_START="TRUE">?</EOL_SPAN>
		
		<!-- for dates and such -->
		<EOL_SPAN TYPE="LITERAL2">[</EOL_SPAN>

		<EOL_SPAN TYPE="NULL" DELEGATE="NOTELINE" AT_LINE_START="TRUE">0</EOL_SPAN>
		<EOL_SPAN TYPE="NULL" DELEGATE="NOTELINE" AT_LINE_START="TRUE">1</EOL_SPAN>
		<EOL_SPAN TYPE="NULL" DELEGATE="NOTELINE" AT_LINE_START="TRUE">2</EOL_SPAN>
		<EOL_SPAN TYPE="NULL" DELEGATE="NOTELINE" AT_LINE_START="TRUE">3</EOL_SPAN>
		<EOL_SPAN TYPE="NULL" DELEGATE="NOTELINE" AT_LINE_START="TRUE">4</EOL_SPAN>
		<EOL_SPAN TYPE="NULL" DELEGATE="NOTELINE" AT_LINE_START="TRUE">5</EOL_SPAN>
		<EOL_SPAN TYPE="NULL" DELEGATE="NOTELINE" AT_LINE_START="TRUE">6</EOL_SPAN>
		<EOL_SPAN TYPE="NULL" DELEGATE="NOTELINE" AT_LINE_START="TRUE">7</EOL_SPAN>
		<EOL_SPAN TYPE="NULL" DELEGATE="NOTELINE" AT_LINE_START="TRUE">8</EOL_SPAN>
		<EOL_SPAN TYPE="NULL" DELEGATE="NOTELINE" AT_LINE_START="TRUE">9</EOL_SPAN>
		
		<!-- <SPAN_REGEXP TYPE="LITERAL2" HASH_CHAR="[" EXCLUDE_MATCH="TRUE">
			<BEGIN>^\[[0-9A-Za-z:\-_,\s]{1,}\]</BEGIN>
			<END></END>
		</SPAN_REGEXP> -->
	</RULES>

	<RULES SET="NOTELINE" DEFAULT="LITERAL2" HIGHLIGHT_DIGITS="TRUE">
		<KEYWORDS IGNORE_CASE="TRUE">
			<!-- reserved words -->
			<KEYWORD1>SUN</KEYWORD1>
			<KEYWORD1>MON</KEYWORD1>
			<KEYWORD1>TUE</KEYWORD1>
			<KEYWORD1>WED</KEYWORD1>
			<KEYWORD1>THU</KEYWORD1>
			<KEYWORD1>FRI</KEYWORD1>
			<KEYWORD1>SAT</KEYWORD1>
			<!-- -->
			<KEYWORD1>JAN</KEYWORD1>
			<KEYWORD1>FEB</KEYWORD1>
			<KEYWORD1>MAR</KEYWORD1>
			<KEYWORD1>APR</KEYWORD1>
			<KEYWORD1>MAY</KEYWORD1>
			<KEYWORD1>JUN</KEYWORD1>
			<KEYWORD1>JUL</KEYWORD1>
			<KEYWORD1>AUG</KEYWORD1>
			<KEYWORD1>SEP</KEYWORD1>
			<KEYWORD1>OCT</KEYWORD1>
			<KEYWORD1>NOV</KEYWORD1>
			<KEYWORD1>DEC</KEYWORD1>
			<!-- -->
			<KEYWORD1>ERROR</KEYWORD1>
			<KEYWORD1>WARNING</KEYWORD1>
			<KEYWORD1>INFO</KEYWORD1>
			<KEYWORD1>SESSION</KEYWORD1>
			<KEYWORD1>ENTRY</KEYWORD1>
			<KEYWORD1>MESSAGE</KEYWORD1>
			<KEYWORD1>INVALID</KEYWORD1>
		</KEYWORDS>
		
	</RULES>
</MODE>
