<?xml version="1.0"?>

<!DOCTYPE MODE SYSTEM "xmode.dtd">

<MODE>
	<PROPS>
		<PROPERTY NAME="commentStart" VALUE="&lt;!--" />
		<PROPERTY NAME="commentEnd" VALUE="--&gt;" />
	</PROPS>
	
	<RULES IGNORE_CASE="TRUE">
		<!-- SGML comment -->
		<SPAN TYPE="COMMENT1">
			<BEGIN>&lt;!--</BEGIN>
			<END>--&gt;</END>
		</SPAN>

		<SPAN TYPE="NULL" DELEGATE="EXCLAIMRULES">
			<BEGIN>&lt;!</BEGIN>
			<END>&gt;</END>
		</SPAN>
		
		<!-- SGML entities -->
		<SPAN TYPE="LITERAL2" NO_WORD_BREAK="TRUE">
			<BEGIN>&amp;</BEGIN>
			<END>;</END>
		</SPAN>
		
		<!-- first try all html tags (and end tags) -->
		&htmlspans;
		
		<!-- delegates to "CSSRULES" -->
		&cssspans;
		
		<!-- delegates to "JSRULES" -->
		&javascriptspans;
		
		<!-- markup tags -->
		<SPAN TYPE="MARKUP">
			<BEGIN>&lt;</BEGIN>
			<END>&gt;</END>
		</SPAN>
	</RULES>

	<RULES SET="TAGS" DEFAULT="MARKUP">
		&htmlrules;
	</RULES>
	
	<RULES SET="JSRULES" DEFAULT="NULL">
		<SEQ TYPE="MARKUP" IGNORE_CASE="TRUE">script</SEQ>
		&javascriptrules;
	</RULES>
	
	<RULES SET="CSSRULES" DEFAULT="NULL">
		<SEQ TYPE="MARKUP" IGNORE_CASE="TRUE">style</SEQ>
		&cssrules;
	</RULES>
	
	<RULES SET="EXCLAIMRULES" DEFAULT="LABEL">
		&dtdrules;
	</RULES>
</MODE>
